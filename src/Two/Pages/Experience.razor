        };
        stackAndTools = new List<ExperienceInfo>
        {
            new ExperienceInfo("./images/experience/dotnet.png", ".NET", "https://dotnet.microsoft.com/en-us/"),
            new ExperienceInfo("./images/experience/angular.png", "Angular", "https://angular.io/"),
            new ExperienceInfo("./images/experience/blazor.png", "Blazor", "https://dotnet.microsoft.com/en-us/apps/aspnet/web-apps/blazor"),
            new ExperienceInfo("./images/experience/caddy-2.png", "Caddy 2", "https://caddyserver.com/v2"),
            new ExperienceInfo("./images/experience/docker.png", "Docker", "https://www.docker.com/"),
            new ExperienceInfo("./images/experience/git.png", "Git", "https://git-scm.com/"),
