            new ExperienceInfo("./images/experience/typescript.png", "TypeScript", "https://www.typescriptlang.org/"),
        };
        subProgrammingLanguages = new List<ExperienceInfo>
        {
            new ExperienceInfo("F#", "https://docs.microsoft.com/en-us/dotnet/fsharp/"),
