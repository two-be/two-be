@page "/experience"

@using Models
@using MudBlazor

<MudTimeline Class="@AppClass.FadeIn" TimelineAlign="TimelineAlign.Start" TimelinePosition="TimelinePosition.Start">
    <MudTimelineItem Color="Color.Success" Variant="Variant.Filled">
        <ItemContent>
            <MudText Color="Color.Success" Class="mt-n1" Typo="Typo.h6" GutterBottom="true">Software Developer (Outsource)</MudText>
            <MudText Typo="Typo.subtitle1">
                TMBThanachart Bank Public Co., Ltd.
                <MudLink Color="Color.Warning" Href="https://www.ttbbank.com/" Target="_blank">
                    <MudIcon Icon="@Icons.Material.Filled.Launch" Size="Size.Small" />
                </MudLink>
            </MudText>
            <MudText Typo="Typo.subtitle1">2022 - Present</MudText>
        </ItemContent>
    </MudTimelineItem>
    <MudTimelineItem Color="Color.Success" Variant="Variant.Filled">
        <ItemContent>
            <MudText Color="Color.Success" Class="mt-n1" Typo="Typo.h6" GutterBottom="true">Software Developer</MudText>
            <MudText Typo="Typo.subtitle1">
                B Circle Co., Ltd.
                <MudLink Color="Color.Warning" Href="https://www.bcircle.co.th/" Target="_blank">
                    <MudIcon Icon="@Icons.Material.Filled.Launch" Size="Size.Small" />
                </MudLink>
            </MudText>
            <MudText Typo="Typo.subtitle1">2015 - 2020</MudText>
        </ItemContent>
    </MudTimelineItem>
    <MudTimelineItem Color="Color.Success" Variant="Variant.Filled">
        <ItemContent>
            <MudText Color="Color.Success" Class="mt-n1" Typo="Typo.h6" GutterBottom="true">Software Developer</MudText>
            <MudText Typo="Typo.subtitle1">
                K&O Systems and Consulting Co., Ltd.
                <MudLink Color="Color.Warning" Href="https://www.ko.in.th/" Target="_blank">
                    <MudIcon Icon="@Icons.Material.Filled.Launch" Size="Size.Small" />
                </MudLink>
            </MudText>
            <MudText Typo="Typo.subtitle1">2013 - 2014</MudText>
        </ItemContent>
    </MudTimelineItem>
    <MudTimelineItem Color="Color.Warning" Variant="Variant.Filled">
        <ItemContent>
            <MudText Color="Color.Warning" Class="mt-n1" Typo="Typo.h6" GutterBottom="true">Experienced Programming Language</MudText>
            <MudGrid>
                <MudItem Class="pb-0" xs="12">
                    <MudText Typo="Typo.caption">Advanced</MudText>
                </MudItem>
                @foreach (var item in programmingLanguages)
                {
                    <MudItem md="2" xs="6">
                        <ExperiencePaper Data="@item"></ExperiencePaper>
                    </MudItem>
                }
                <MudItem Class="pb-0" xs="12">
                    <MudText Typo="Typo.caption">Beginner</MudText>
                </MudItem>
                <MudItem xs="12">
                    @foreach (var item in subProgrammingLanguages)
                    {
                        <ExperienceChip Data="@item"></ExperienceChip>
                    }
                </MudItem>
            </MudGrid>
        </ItemContent>
    </MudTimelineItem>
    <MudTimelineItem Color="Color.Warning" Variant="Variant.Filled">
        <ItemContent>
            <MudText Color="Color.Warning" Class="mt-n1" Typo="Typo.h6" GutterBottom="true">Experienced Stack & Tools</MudText>
            <MudGrid>
                <MudItem Class="pb-0" xs="12">
                    <MudText Typo="Typo.caption">Favorite</MudText>
                </MudItem>
                @foreach (var item in stackAndTools)
                {
                    <MudItem md="2" xs="6">
                        <ExperiencePaper Data="@item"></ExperiencePaper>
                    </MudItem>
                }
                <MudItem Class="pb-0" xs="12">
                    <MudText Typo="Typo.caption">Sometimes</MudText>
                </MudItem>
                <MudItem xs="12">
                    @foreach (var item in subStackAndTools)
                    {
                        <ExperienceChip Data="@item"></ExperienceChip>
                    }
                </MudItem>
            </MudGrid>
        </ItemContent>
    </MudTimelineItem>
</MudTimeline>

@code {
    private List<ExperienceInfo> programmingLanguages = new List<ExperienceInfo>();
    private List<ExperienceInfo> stackAndTools = new List<ExperienceInfo>();
    private List<ExperienceInfo> subProgrammingLanguages = new List<ExperienceInfo>();
    private List<ExperienceInfo> subStackAndTools = new List<ExperienceInfo>();

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        SetProgrammingLanguages();
        await base.OnAfterRenderAsync(firstRender);
    }

    private void SetProgrammingLanguages()
    {
        programmingLanguages = new List<ExperienceInfo>
        {
            new ExperienceInfo("./images/experience/csharp.png", "C#", "https://docs.microsoft.com/en-us/dotnet/csharp/"),
